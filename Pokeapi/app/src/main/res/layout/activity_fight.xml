<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.andresfelipe.pokeapi.Pokefight.Fight"
    android:background="@drawable/blue">


    <TextView
        android:id="@+id/name1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/poke1"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/poke1"
        android:layout_marginStart="12dp"
        android:layout_marginTop="63dp"
        android:fontFamily="monospace"
        android:text="TextView"
        android:textAlignment="center"
        android:textSize="36sp"
        tools:layout_editor_absoluteX="55dp"
        tools:layout_editor_absoluteY="94dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/name1"
        android:layout_alignBottom="@+id/name1"
        android:layout_alignParentEnd="true"
        android:layout_alignStart="@+id/poke2"
        android:fontFamily="monospace"
        android:text="TextView"
        android:textAlignment="center"
        android:textSize="36sp"
        android:typeface="monospace" />

    <ImageView
        android:id="@+id/poke1"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="84dp"
        app:srcCompat="@mipmap/ic_launcher" />

    <ImageView
        android:id="@+id/poke2"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignTop="@+id/poke1"
        app:srcCompat="@mipmap/ic_launcher"
        android:layout_alignParentEnd="true" />

    <Button
        android:id="@+id/pelea"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="69dp"
        android:layout_toEndOf="@+id/name1"
        android:text="Fight" />

</RelativeLayout>
