<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.andresfelipe.pokeapi.Pokefight.MainActivity"
    android:background="@drawable/blue">


    <TextView
        android:id="@+id/pokemon2"
        android:layout_width="139dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="30dp"
        android:layout_toStartOf="@+id/vs"
        android:text="TextView"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textSize="24sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Seleccion aleatoria"
        android:layout_marginBottom="84dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/pokemon1"
        android:layout_width="186dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/vs"
        android:layout_alignParentEnd="true"
        android:fontFamily="monospace"
        android:text="TextView"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="50dp"
        tools:layout_editor_absoluteY="287dp" />

    <ImageView
        android:id="@+id/vs"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_below="@+id/pokemon2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="117dp"
        android:fontFamily="monospace"
        android:text="VS"
        android:textSize="24sp" />

    <ImageView
        android:id="@+id/image1"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:cropToPadding="true"
        app:srcCompat="@mipmap/ic_launcher"
        android:layout_below="@+id/pokemon2"
        android:layout_alignStart="@+id/pokemon2"
        android:layout_toStartOf="@+id/vs"
        android:layout_alignEnd="@+id/pokemon2"
        android:layout_above="@+id/data" />

    <ImageView
        android:id="@+id/image2"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:srcCompat="@mipmap/ic_launcher"
        android:layout_below="@+id/pokemon1"
        android:layout_alignParentEnd="true"
        android:layout_alignStart="@+id/pokemon1"
        android:layout_above="@+id/Data" />

    <TextView
        android:id="@+id/Data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="monospace"
        android:text="Datos"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_above="@+id/type1"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/vs" />

    <TextView
        android:id="@+id/data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="monospace"
        android:text="Datos"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_below="@+id/image2"
        android:layout_alignParentEnd="true"
        android:layout_alignStart="@+id/image2" />

    <TextView
        android:id="@+id/weight1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="monospace"
        android:text="TextView"
        android:textAlignment="center"
        android:layout_below="@+id/type2"
        android:layout_alignParentStart="true"
        android:layout_marginTop="15dp"
        android:layout_alignEnd="@+id/type1" />

    <TextView
        android:id="@+id/weight2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/data"
        android:layout_alignStart="@+id/data"
        android:layout_alignTop="@+id/weight1"
        android:fontFamily="monospace"
        android:text="TextView"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/exp1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textAlignment="center"
        android:typeface="monospace"
        android:layout_below="@+id/weight1"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp"
        android:layout_alignEnd="@+id/weight1" />

    <TextView
        android:id="@+id/exp2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/exp1"
        android:layout_alignEnd="@+id/data"
        android:layout_alignStart="@+id/data"
        android:fontFamily="monospace"
        android:text="TextView"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/type1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="monospace"
        android:text="TextView"
        android:textAlignment="center"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/Data" />

    <TextView
        android:id="@+id/type2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/type1"
        android:layout_alignParentEnd="true"
        android:layout_alignStart="@+id/image2"
        android:fontFamily="monospace"
        android:text="TextView"
        android:textAlignment="center" />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="14dp"
        android:text="Fight" />

    <TextView
        android:id="@+id/id1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/exp1"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/exp1"
        android:layout_marginTop="10dp"
        android:fontFamily="monospace"
        android:text="TextView"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/id2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/id1"
        android:layout_alignBottom="@+id/id1"
        android:layout_alignParentEnd="true"
        android:layout_alignStart="@+id/exp2"
        android:fontFamily="monospace"
        android:text="TextView"
        android:textAlignment="center" />


</RelativeLayout>
